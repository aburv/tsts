<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Takbuff" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="background">@color/black</item>
        <item name="mildBackground">@color/greyBright</item>
        <item name="bright">@color/blackBright</item>
        <item name="lessBright">@color/blackLess</item>
        <item name="dark">@color/white</item>
        <item name="lessDark">@color/whiteLess</item>

        <item name="primary">@color/creamLess</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/banner</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="ThemeOverlay.Takbuff.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/banner</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>
</resources>